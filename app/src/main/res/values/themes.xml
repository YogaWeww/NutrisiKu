<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NutrisiKu" parent="android:Theme.Material.Light.NoActionBar" />

    <!-- Tema untuk Splash Screen -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Warna latar belakang splash screen -->
        <item name="windowSplashScreenBackground">@color/isabelline</item>
        <!-- Ikon yang akan ditampilkan (logo Anda) -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_nutrisiku</item>
        <!-- Tema yang akan digunakan setelah splash screen selesai -->
        <item name="postSplashScreenTheme">@style/Theme.NutrisiKu</item>
    </style>
</resources>

